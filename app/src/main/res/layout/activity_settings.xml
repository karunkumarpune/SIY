<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.siy.activity.SettingsActivity">

    <include android:id="@+id/include_toolbar_settings"
        layout="@layout/toolbar_layout"/>


    <RelativeLayout
        android:layout_below="@id/include_toolbar_settings"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--Notification Layout-->
        <RelativeLayout
            android:id="@+id/layout_notificatoin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Notifications"
                android:layout_marginTop="@dimen/margin_settings"
                android:textColor="@color/colorText"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switch_notification"
                android:checked="true"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="@dimen/margin_settings"
                android:background="@color/underline_color_edit_text"
                android:layout_below="@id/switch_notification"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
        </RelativeLayout>


        <!-- About Us Layout -->
        <RelativeLayout
            android:id="@+id/layout_about_us"
            android:layout_below="@id/layout_notificatoin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="About Us"
                android:layout_marginTop="@dimen/margin_settings"
                android:layout_alignParentLeft="true"
                android:textColor="@color/colorText"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/right_arrow_about_us"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="@dimen/margin_settings"
                android:background="@color/underline_color_edit_text"
                android:layout_below="@id/right_arrow_about_us"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
        </RelativeLayout>



        <!-- Privacy Policy Layout -->
        <RelativeLayout
            android:id="@+id/layout_privacy_policy"
            android:layout_below="@id/layout_about_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Privacy Policy"
                android:layout_marginTop="@dimen/margin_settings"
                android:textColor="@color/colorText"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/right_arrow_privacy_policy"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="@dimen/margin_settings"
                android:background="@color/underline_color_edit_text"
                android:layout_below="@id/right_arrow_privacy_policy"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
        </RelativeLayout>


        <!--FAQ Layout-->
        <RelativeLayout
            android:id="@+id/layout_faq"
            android:layout_below="@id/layout_privacy_policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="FAQ"
                android:layout_marginTop="@dimen/margin_settings"
                android:textColor="@color/colorText"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/right_arrow_faq"
                android:layout_alignParentRight="true"
                android:src="@drawable/right_arrow"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="@dimen/margin_settings"
                android:background="@color/underline_color_edit_text"
                android:layout_below="@id/right_arrow_faq"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
        </RelativeLayout>

        <!--Log out Layout-->
        <RelativeLayout
            android:id="@+id/layout_log_out"
            android:layout_below="@id/layout_faq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Log Out"
                android:layout_marginTop="@dimen/margin_settings"
                android:layout_alignParentLeft="true"
                android:textColor="@color/colorText"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/right_arrow_log_out"
                android:layout_alignParentRight="true"
                android:src="@drawable/right_arrow"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="@dimen/margin_settings"
                android:background="@color/underline_color_edit_text"
                android:layout_below="@id/right_arrow_log_out"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
