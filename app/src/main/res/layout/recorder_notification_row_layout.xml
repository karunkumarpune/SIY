<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <!--First line Layout-->

        <RelativeLayout
            android:id="@+id/notification_first_row_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/notification_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Loretta Hansen"
                android:textColor="@color/colorText" />

            <TextView
                android:id="@+id/notification_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="4dp"
                android:text="6:40 PM"
                android:textColor="@color/colorPrimary" />
        </RelativeLayout>

        <!--Second Line-->
        <TextView
            android:id="@+id/notification_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/notification_first_row_layout"
            android:text="This is the dummy notification. Click here to show more."
            android:textColor="@color/colorTextLight"
            android:textSize="12dp" />
    </RelativeLayout>
</RelativeLayout>