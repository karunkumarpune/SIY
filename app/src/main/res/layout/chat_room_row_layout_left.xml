<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/chat_room_layout_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/left_chat">

        <RelativeLayout
            android:id="@+id/rl_upper_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/chat_room_tv_message_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:paddingLeft="40dp"
                android:paddingRight="20dp"
                android:paddingTop="4dp"
                android:text="Lorem lpsum is simply dummy text of the printing and type setting."
                android:textColor="@color/colorText"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/chat_room_image_left"
                android:layout_width="280dp"
                android:layout_height="200dp"
                android:layout_margin="4dp"
                android:paddingLeft="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/life_image"
                android:visibility="gone" />


            <VideoView
                android:id="@+id/chat_room_video_left"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:paddingLeft="20dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/chat_room_tv_message_time_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/rl_upper_layout"
            android:layout_marginLeft="80dp"
            android:padding="4dp"
            android:text="6:40 PM"
            android:textColor="@color/colorPrimary" />
    </RelativeLayout>


</RelativeLayout>