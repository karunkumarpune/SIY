<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/payment_received_bg"
        android:src="@drawable/payment_received_bg"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_below="@id/payment_received_bg"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/payment_received_image"
            android:layout_centerHorizontal="true"
            android:src="@drawable/payment_received"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/payment_received_amount"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimary"
            android:layout_below="@id/payment_received_image"
            android:gravity="center"
            android:text="$150"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_received_successfully"
            android:layout_below="@id/payment_received_amount"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorText"
            android:gravity="center"
            android:text="Received Successfully"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/layout_for_name"
            android:gravity="center"
            android:layout_below="@id/tv_received_successfully"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/colorText"
                android:text="From: "
                android:id="@+id/tv_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/payment_received_name"
                android:textColor="@color/colorText"
                android:text="Druvam Arya"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:id="@+id/payment_received_date_"
            android:text="22 July 2017, 02:50 PM"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorText"
            android:layout_below="@id/layout_for_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</RelativeLayout>