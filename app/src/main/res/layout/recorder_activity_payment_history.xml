<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.siy.activity.recorder.PaymentHistoryRecorder">

    <!--App Bar Layout-->
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/include_tool_bar_payment_history"
            layout="@layout/toolbar_layout"/>


        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout_payment_history"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            app:tabBackground="@color/colorPrimary"
            app:tabTextColor="@color/colorWhite"
            app:tabSelectedTextColor="@color/colorWhite"
            app:tabMode="fixed"
            app:tabIndicatorColor="#f9bf3b"
            android:defaultFocusHighlightEnabled="false"
            app:tabTextAppearance="@style/MyTabStyle"
            app:tabGravity="fill">
        </android.support.design.widget.TabLayout>
    </android.support.design.widget.AppBarLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_payment_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</RelativeLayout>